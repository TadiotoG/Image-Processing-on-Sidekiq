<%= form_with(model: image, local: true, html: { multipart: true, class: "form-container" }) do |form| %>
  <div class="form-group">
    <%= form.label :name, "Nome da Imagem" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Digite o nome da imagem" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Descrição" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Escreva uma descrição" %>
  </div>

  <div class="form-group">
    <%= form.label :file, "Escolha o Arquivo" %>
    <%= form.file_field :file, class: "form-control-file" %>
  </div>

  <div class="form-actions">
    <%= form.submit "Salvar Imagem", class: "btn btn-primary" %>
  </div>
<% end %>
